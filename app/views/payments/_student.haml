%tr
  %td= student.first_name
  %td= student.last_name
  %td= student.birthdate
  %td
    = link_to payment_path(student), { title: t('shared.show') } do
      %button.btn.btn-default
        = fa_icon "search"
    = link_to edit_payment_path(student), { title: t('shared.edit') } do
      %button.btn.btn-default
        = fa_icon "edit"
    = link_to payment_path(student), { method: :delete, title: t('shared.delete') } do
      %button.btn.btn-default
        = fa_icon "times"
